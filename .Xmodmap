! ------ !
! legend !
! ------ !

! shift - Shift
! lock - CapsLock
! control - Ctrl
! mod1 - Alt
! mod2 - NumLock
! mod3 - ?
! mod4 - Windows
! mod5 - ? (different shift)

! ------------------ !
! original modifiers !
! ------------------ !

! shift       Shift_L (0x32),  Shift_R (0x3e)
! lock        Caps_Lock (0x42)
! control     Control_L (0x25),  Control_R (0x69)
! mod1        Alt_L (0x40),  Alt_R (0x6c),  Meta_L (0xcd)
! mod2        Num_Lock (0x4d)
! mod3      
! mod4        Super_L (0x85),  Super_R (0x86),  Super_L (0xce),  Hyper_L (0xcf)
! mod5        ISO_Level3_Shift (0x5c),  Mode_switch (0xcb)

! --------------- !
! clear modifiers !
! --------------- !

! clear Ctrl
clear control

! clear Alt
clear mod1

! clear Windows
clear mod4

! --------------------- !
! change left side keys !
! --------------------- !

! 37 - left Ctrl
keycode 37 = Control_L

! 64 - left Windows
keycode 64 = Alt_L Meta_L

! 105 - left Alt
keycode 105 = Control_L

! ---------------------- !
! change right side keys !
! ---------------------- !

! 108 - right Alt
keycode 108 = Alt_R Meta_R

! 105 - right Ctrl
keycode 105 = Control_R

! --------------- !
! setup modifiers !
! --------------- !

add mod1 = Alt_L Meta_L
add mod1 = Alt_R Meta_R
add control = Control_L
add control = Control_R
